<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="200
        ">
    <Grid>
        <Button x:Name="MyButton" Content="Pozwól sie przywitać" HorizontalAlignment="Left" Margin="0,295,0,0" VerticalAlignment="Top" Width="192" Click="MyButton_Click"/>
        <TextBox x:Name="MyTextBoxPobieranie" HorizontalAlignment="Left" Height="24" Margin="38,102,0,0" TextWrapping="Wrap" Text="Wpisz Imię" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <TextBox x:Name="MyTextBoxWyswietlanie" HorizontalAlignment="Left" Height="22" Margin="38,166,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" TextChanged="MyTextBoxWyswietlanie_TextChanged" IsReadOnly="True"/>
        <Button Content="Button" HorizontalAlignment="Left" Margin="0,322,0,0" VerticalAlignment="Top" Width="192" Click="Button_Click"/>

    </Grid>
</Window>
